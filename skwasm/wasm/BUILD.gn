import("//build/toolchain/wasm.gni")

wasm_lib("skwasm") {
  sources = [
    "canvas.cpp",
    "path.cpp",
    "surface.cpp",

    "export.h",
    "wrappers.h",
  ]

  ldflags = [
    "-lGL",
    "-sLLD_REPORT_UNDEFINED",
    "-sUSE_WEBGL2=1",
    "-sMAX_WEBGL_VERSION=2",
    "-sEXPORTED_RUNTIME_METHODS=[\"cwrap\"]",
  ]

  deps = [ "//third_party/skia" ]
}
